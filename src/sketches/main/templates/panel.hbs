<div class="panel">
  <div class="panel__inner">
    <div class="spacer"></div>
    <div class="thumbnail" tabindex="{{zero-exclusive-index @index}}">
      <div class="thumbnail__inner" tabindex="-1">
        {{title}}
      </div>
    </div>
    <div class="full-content">
      {{#each short-version}}
        <p>{{{.}}}</p>
      {{/each}}
    </div>
  </div>
</div>